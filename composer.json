{
  "name": "talis/sierra-api-php-client",
  "description": "A client for Innovative's Sierra APIs",
  "type": "library",
  "require": {
    "guzzlehttp/guzzle": "6.2.3",
    "kamermans/guzzle-oauth2-subscriber": "^1.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/timhodson/php-split-timer"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "4.1.6",
    "squizlabs/php_codesniffer": "3.0.0",
    "timhodson/php-split-timer": "0.1.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Tim Hodson",
      "email": "tim.hodson@talis.com"
    },
    {
      "name": "Richard Tattersall",
      "email": "rt@talis.com"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "bash scripts/setup.sh"
    ]
  },
  "autoload": {
    "psr-4": {
      "Sierra\\": "src/Sierra"
    }
  }
}
